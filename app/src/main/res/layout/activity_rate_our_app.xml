<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RateAppActivity">

    <!-- Title of the screen -->
    <TextView
        android:id="@+id/rateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Our App"
        android:textSize="24sp"
        android:textColor="#4CAF50"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Instructions -->
    <TextView
        android:id="@+id/rateInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  If you are enjoying using our app. Would you mind rating on us. "
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/rateTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Star Rating System -->
    <LinearLayout
        android:id="@+id/starRatingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/rateInstructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Star 1 -->
        <ImageView
            android:id="@+id/star1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_empty"
            android:contentDescription="Star 1"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>

        <!-- Star 2 -->
        <ImageView
            android:id="@+id/star2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_empty"
            android:contentDescription="Star 2"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>

        <!-- Star 3 -->
        <ImageView
            android:id="@+id/star3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_empty"
            android:contentDescription="Star 3"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>

        <!-- Star 4 -->
        <ImageView
            android:id="@+id/star4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_empty"
            android:contentDescription="Star 4"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>

        <!-- Star 5 -->
        <ImageView
            android:id="@+id/star5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_empty"
            android:contentDescription="Star 5"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@color/leafGreen"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/starRatingLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
