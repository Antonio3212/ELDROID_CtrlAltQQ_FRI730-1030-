<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7F8"> <!-- Slightly tinted background -->

    <!-- Leaf Background Image with Slightly Increased Opacity -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/leaf"
        android:scaleType="centerCrop"
        android:alpha="0.9" /> <!-- Adjust alpha to 0.3 for a more visible leaf pattern -->

    <!-- Optional Semi-Transparent Overlay for Softer Blending -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF" /> <!-- 50% transparency overlay -->

    <!-- Content Layer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title at the Top -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Notifications"
            android:textColor="#222222"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <!-- Card Container for RecyclerView with rounded corners and elevation -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:cardCornerRadius="12dp"
            android:cardElevation="4dp"
            android:cardBackgroundColor="#FFFFFF">

            <!-- RecyclerView for Notifications List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/notificationsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>
